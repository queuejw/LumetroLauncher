<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WPDialog.Theme" parent="@android:style/Theme.Holo.Light.Dialog" >
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowAnimationStyle">@style/dialogWindowAnim</item>
    </style>

    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/wpd_exit</item>
    </style>

    <style name="ShapeAppearance" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>
    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="backgroundColor">?attr/colorOnBackground</item>
        <item name="android:textColor">?android:attr/colorBackground</item>
        <item name="buttonStyle">@style/Metro.Button</item>
    </style>
    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimaryDark">?attr/colorPrimary</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="android:colorAccent">?attr/colorPrimary</item>
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">?android:attr/colorBackground</item>
    </style>

    <style name="Metro.Button" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorOnBackground</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="Settings.Card" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">?android:attr/colorBackground</item>
        <item name="android:transformPivotX">5dp</item>
        <item name="android:transformPivotY">0dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
    <style name="Metro.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="track">@drawable/switch_track</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:showText">true</item>
    </style>
</resources>