<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:padding="4dp"
            android:text="@string/fle_early_access_disclaimer" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/ea_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingStart="4dp"
            android:text="@string/fle_ea_checkbox" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/ea_feedback_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:paddingStart="4dp"
            android:text="@string/fle_ea_data_collection_checkbox" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/feedback_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:paddingStart="8dp"
            android:text="@string/what_is_this" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/feedback_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:paddingStart="8dp"
            android:text="@string/fle_ea_data_collection_hint"
            android:visibility="gone" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>