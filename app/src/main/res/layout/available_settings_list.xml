<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/themeSetting"
        style="@style/Settings.Card"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/start_theme_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_theme"
                android:textSize="24sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/theme_sub"
                style="@style/Lumetro.Settings.Sub.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_theme_sub" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tileSetting"
        style="@style/Settings.Card"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="8dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tile_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tiles"
                android:textSize="24sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tile_sub"
                style="@style/Lumetro.Settings.Sub.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tiles_sub" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/iconsSetting"
        style="@style/Settings.Card"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="8dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/icons_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icons"
                android:textSize="24sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/icons_sub"
                style="@style/Lumetro.Settings.Sub.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icons_sub" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/editModeSetting"
        style="@style/Settings.Card"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="8dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/editMode_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editmode"
                android:textSize="24sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/editMode_sub"
                style="@style/Lumetro.Settings.Sub.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editmode_sub" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/feedbackSetting"
        style="@style/Settings.Card"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="8dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/feedback_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feedback"
                android:textSize="24sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/feedback_sub"
                style="@style/Lumetro.Settings.Sub.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feedback_sub" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/updatesSetting"
        style="@style/Settings.Card"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="8dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/updates_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/launcher_update"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/updates_sub"
                style="@style/Lumetro.Settings.Sub.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/launcher_update_sub" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/aboutSetting"
        style="@style/Settings.Card"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="8dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/about_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:textSize="24sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/about_sub"
                style="@style/Lumetro.Settings.Sub.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_sub" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/experimentSetting"
        style="@style/Settings.Card"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/experiments_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/experiments"
                android:textSize="24sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/experiments_sub"
                style="@style/Lumetro.Settings.Sub.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/experiments_sub" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/leaks"
        style="@style/Settings.Card"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="8dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/leackcanary_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LeakCanary"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/leakcanary_sub"
                style="@style/Lumetro.Settings.Sub.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/for_developers" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>
</androidx.appcompat.widget.LinearLayoutCompat>